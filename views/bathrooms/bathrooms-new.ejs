<% include ../partials/boilerplate %>
<% include ../partials/nav-inactive %>


<div class="add-page">
    <h3 id="add-bth-heading">Add A Bathroom!</h3>
    <div class="add">
      <button type="button" name="button" id="guess-location">Guess Location</button>
      <form action="/bathrooms" method="POST">
        <label for="name" >Place/Business Name</label>
        <input type="text" name="name" value=""  required/>
        <label for="street">Street Address</label>
        <input type="text" name="street" value=""/>
        <label for="city">City</label>
        <input type="text" name="city" value="" />
        <label for="state">State/Province</label>
        <input type="text" name="state" value="" />
        <label for="country">Country</label>
        <select name="country">
          <option value="US">US</option>
          <option value="UK">UK</option>
        </select>
        <label for="price">Price</label>
        <select name="price">
          <option value="TRUE">Free</option>
          <option value="FALSE">Customers Only</option>
        </select>
        <label for="accessible">Accessible</label>
        <select name="accessible">
          <option value="FALSE">Not accessible</option>
          <option value="TRUE">Accessible</option>
        </select>
        <label for="unisex">Unisex</label>
        <select name="unisex">
          <option value="TRUE">Gender Neutral</option>
          <option value="FALSE">Gendered single stall or Safe place</option>
        </select>
        <label for="directions">Directions</label>
        <textarea name="directions" placeholder="(e.g.: third floor in the back)"></textarea>
        <label for="comment">Comment</label>
        <textarea name="comment" placeholder="(e.g.: super clean)"></textarea>
        <div class="buttons">
          <input type="submit" value="Submit" />
          <a href="/"><input type="button" value="Cancel"/></a>
        </div>
      </form>
    </div>

  </div>
